html
  head
    title= title
    script(src='https://cdnjs.cloudflare.com/ajax/libs/d3/4.13.0/d3.min.js').

  body
    h1= message
    #my-visualisation
    script(type='text/javascript').
      var data = [3, 5, 8, 4, 7];

      // create the outer svg
      var svg = d3.select('#my-visualisation').append('svg')
              .attr('height', 100)
              .attr('width', 500);

      // append circles for each data point sized relative to the value
      svg.selectAll('circle')
              .data(data)
              .enter()
              .append('circle')
              .attr('cx', function (d, i) {
                return (i + 1) * 100 - 50;
              })
              .attr('r', function (d) {
                return d * 5;
              });


